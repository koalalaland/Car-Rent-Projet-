@model IEnumerable<Projet_GestionVoiture1.Models.Client>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gestion des Clients";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <p>Gérez les clients de votre plateforme</p>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un nouveau client
    </a>
</div>

@if (Model.Any())
{
    <div class="table-card">
        <div class="card-header">
            <h3>Liste des clients (@Model.Count())</h3>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nom</td>
                        <td>@item.Prenom</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Voir les détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state" style="text-align:center; padding:60px 20px; background:white; border-radius:12px; border:1px solid #e5e7eb;">
        <div style="width:80px; height:80px; background:#f0f9ff; border-radius:50%; display:inline-flex; align-items:center; justify-content:center; margin-bottom:20px;">
            <i class="fas fa-users" style="font-size:32px; color:#0369a1;"></i>
        </div>
        <h3 style="margin-bottom:8px; color:#1f2937;">Aucun client disponible</h3>
        <p style="color:#6b7280; margin-bottom:24px;">Commencez par ajouter votre premier client</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter un client
        </a>
    </div>
}