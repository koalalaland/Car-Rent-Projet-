@model Projet_GestionVoiture1.Models.Client

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Supprimer le client";
}

<div class="page-header">
    <h1>Supprimer le client</h1>
    <p>Êtes-vous sûr de vouloir supprimer @Model.Prenom @Model.Nom ?</p>
</div>

<div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle"></i>
    Cette action est irréversible. Toutes les réservations associées à ce client seront également supprimées.
</div>

<div class="card" style="max-width: 600px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Nom @Model.Prenom</h5>
        <p><strong>Email :</strong> @Model.Email</p>
        <p><strong>Téléphone :</strong> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "Non fourni" : Model.PhoneNumber)</p>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Oui, supprimer
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Annuler
            </a>
        </form>
    </div>
</div>