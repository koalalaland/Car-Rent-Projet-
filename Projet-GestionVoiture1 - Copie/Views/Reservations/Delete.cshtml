@model Projet_GestionVoiture1.Models.Reservation
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Supprimer la réservation";
}

<h2>Supprimer la réservation</h2>

<div class="alert alert-warning">
    <h4>Êtes-vous sûr de vouloir supprimer cette réservation ?</h4>
    <p>Cette action est irréversible.</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Client</dt>
            <dd class="col-sm-9">@(Model.Client?.Nom ?? "") @(Model.Client?.Prenom ?? "")</dd>

            <dt class="col-sm-3">Voiture</dt>
            <dd class="col-sm-9">@(Model.Voiture?.Nom ?? "Inconnue")</dd>

            <dt class="col-sm-3">Dates</dt>
            <dd class="col-sm-9">@Model.DateDebut.ToString("dd/MM/yyyy") → @Model.DateFin.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Statut</dt>
            <dd class="col-sm-9">@Model.Statut</dd>

            <dt class="col-sm-3">Montant</dt>
            <dd class="col-sm-9">@Model.MontantTotal.ToString("F2") MAD </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer définitivement
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-times"></i> Annuler
    </a>
</form>


