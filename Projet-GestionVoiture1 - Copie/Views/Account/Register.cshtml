@model Projet_GestionVoiture1.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Inscription";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-wrap p-4 p-md-5">
    <div class="icon d-flex align-items-center justify-content-center">
        <span class="ion-ios-person-add"></span>
    </div>
    <h3 class="text-center mb-4">Créer un compte</h3>
    
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Nom" class="label"></label>
                    <input asp-for="Nom" class="form-control" placeholder="Votre nom">
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Prenom" class="label"></label>
                    <input asp-for="Prenom" class="form-control" placeholder="Votre prénom">
                    <span asp-validation-for="Prenom" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Email" class="label"></label>
            <input asp-for="Email" class="form-control" placeholder="Votre email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Telephone" class="label"></label>
            <input asp-for="Telephone" class="form-control" placeholder="Votre téléphone">
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="NumeroPermis" class="label"></label>
            <input asp-for="NumeroPermis" class="form-control" placeholder="Numéro de permis de conduire">
            <span asp-validation-for="NumeroPermis" class="text-danger"></span>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password" class="label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Mot de passe">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmer">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary rounded submit p-3 px-5 w-100">
                S'inscrire
            </button>
        </div>
    </form>
    
    <p class="text-center mt-4">
        Déjà inscrit? 
        <a asp-action="Login">Se connecter</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
