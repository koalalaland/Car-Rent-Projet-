@model Projet_GestionVoiture1.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-wrap p-4 p-md-5">
    <div class="icon d-flex align-items-center justify-content-center">
        <span class="ion-ios-car"></span>
    </div>
    <h3 class="text-center mb-4">Connexion</h3>
    
    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        <div class="form-group">
            <label asp-for="Email" class="label"></label>
            <input asp-for="Email" class="form-control" placeholder="Votre email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password" class="label"></label>
            <input asp-for="Password" class="form-control" placeholder="Votre mot de passe">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <div class="form-group d-md-flex">
            <div class="w-50 d-flex align-items-center">
                <input asp-for="RememberMe" type="checkbox" class="mr-2">
                <label asp-for="RememberMe" class="mb-0">Se souvenir de moi</label>
            </div>
            <div class="w-50 text-md-right">
                <a href="#">Mot de passe oublié?</a>
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary rounded submit p-3 px-5 w-100">
                Se connecter
            </button>
        </div>
    </form>
    
    <p class="text-center mt-4">
        Pas encore inscrit? 
        <a asp-action="Register">Créer un compte</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
